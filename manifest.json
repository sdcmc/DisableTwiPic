{
  "name": "DisableTwiPic",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "タイムラインに表示される特定ユーザーの画像を非表示にします。",
  "background": { 
    "persistent" : true,
    "scripts": ["js/background.js"] 
  },
  "browser_action":{
    "default_icon": "images/icon.png",
    "default_title":"DisableTwiPic",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": 
      [
        "js/jquery.js",
        "js/script.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}